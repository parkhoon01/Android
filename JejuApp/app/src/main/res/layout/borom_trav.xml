<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/borom" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="보롬왓"
                android:textAlignment="center"
                android:textColor="#FF9800"
                android:textSize="34sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="제주 서귀포시 표선면 번영로 2350-104"
                android:textAlignment="center"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="매일 09:00 - 18:00"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="010-7362-2345"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:text="제주도의 바른 먹거리를 위한 농작물을 직접 재배하고,소비자와의 간격을 줄이기 위해 연중 개방하여 자연속에서 힐링하실 수 있습니다. 일반음식점, 카페, 베이커리, 식물체험"
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/borom2" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/borom3" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="보롬왓의 입구!!"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/borom4" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="보롬왓의 매밀꽃밭!!"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/borom5" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="보롬왓의 풍경!!"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>