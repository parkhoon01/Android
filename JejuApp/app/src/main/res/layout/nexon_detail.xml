<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView18"
                android:layout_width="413dp"
                android:layout_height="61dp"
                android:text="NEXON 박물관"
                android:textAlignment="center"
                android:textColor="#CDDC39"
                android:textDirection="firstStrongRtl"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="406dp"
                android:layout_height="277dp"
                app:srcCompat="@drawable/nexon" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="413dp"
                android:layout_height="39dp"
                android:text="제주 제주시 1100로 3198-8 NXC센터"
                android:textAlignment="center"
                android:textColor="#CDDC39"
                android:textDirection="firstStrongRtl"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="10:00 - 18:00 (매주 월요일 휴무)(홈페이지 예약 필수)"
                android:textAlignment="center"
                android:textColor="#CDDC39"
                android:textDirection="firstStrongRtl"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="064-745-1994"
                android:textAlignment="center"
                android:textColor="#CDDC39"
                android:textDirection="firstStrongRtl"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="안전한 관람을 위해 예약 관람제 시행 중 ※ 방문 전 홈페이지에서 방문시간 예약 필수  넥슨컴퓨터박물관은 인류의 삶을 가장 빠르게 변화시킨 현재 진행형 매체인 '컴퓨터'와 그 발전에 기여해 온 '게임'의 역사를 함께 조망함으로써 우리의 미래를 상상해 볼 수 있는 체험형 박물관입니다."
                android:textAlignment="textStart"
                android:textColor="#0C0C0C"
                android:textDirection="firstStrongRtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="406dp"
                android:layout_height="148dp"
                app:srcCompat="@drawable/nexon5" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="277dp"
                app:srcCompat="@drawable/nexon2" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="277dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/nexon3" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="277dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nexon4" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>