<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanumflower"
                android:text="섞어먹는 술"
                android:textAlignment="center"
                android:textColor="#FFC107"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D6C103"
                android:fontFamily="@font/nanumgrandfather"
                android:text="소맥(소주 + 맥주)"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/somac" />

            <TextView
                android:id="@+id/textView100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#051EBF"
                android:fontFamily="@font/nanumgrandfather"
                android:text="태극주(소주 + 홍초 + 파워에이드)"
                android:textAlignment="center"
                android:textColor="#EF0303"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/tagk" />

            <TextView
                android:id="@+id/textView103"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#C11C1C"
                android:fontFamily="@font/nanumgrandfather"
                android:text="젤리주(젤리 + 소주)"
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView48"
                android:layout_width="match_parent"
                android:layout_height="487dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/jelly" />

            <TextView
                android:id="@+id/textView104"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#8BC34A"
                android:fontFamily="@font/nanumgrandfather"
                android:text="하이볼(위스키 + 탄산수 + 레몬즙)"
                android:textAlignment="center"
                android:textColor="#FFEB3B"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView49"
                android:layout_width="match_parent"
                android:layout_height="399dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/hibol" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>